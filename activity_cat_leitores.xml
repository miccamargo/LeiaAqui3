<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatLeitores">

    <ImageView
        android:id="@+id/imageCatLeitores"
        android:layout_width="192dp"
        android:layout_height="186dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="109dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[1]" />

    <EditText
        android:id="@+id/txtDesCatLeitores"
        android:layout_width="349dp"
        android:layout_height="68dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txtDescCatLeitores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCatLeitores" />

    <EditText
        android:id="@+id/txtDiasEmprestimo"
        android:layout_width="347dp"
        android:layout_height="75dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/txtDiasEmprestimo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDesCatLeitores" />

    <Button
        android:id="@+id/btnCadastrarCatLeitores"
        android:layout_width="230dp"
        android:layout_height="72dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="46dp"
        android:text="@string/btnCadastrarCatLeitores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDiasEmprestimo"
        tools:text="Cadastrar" />
</androidx.constraintlayout.widget.ConstraintLayout>